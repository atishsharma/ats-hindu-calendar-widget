{
  "name": "ats-hindu-calendar",
  "version": "1.0.0",
  "description": "Ats's Hindu Calendar â€” Cross-platform desktop widget for the Hindu Panchang calendar",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --linux AppImage deb",
    "build:appimage": "electron-builder --linux AppImage",
    "build:deb": "electron-builder --linux deb"
  },
  "build": {
    "appId": "com.atishsharma.hindu-calendar",
    "productName": "Ats Hindu Calendar",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "app.js",
      "icon.png",
      "tray-icon.png"
    ],
    "linux": {
      "icon": "icons",
      "category": "Utility",
      "maintainer": "Atish Ak Sharma <atishsharma@example.com>",
      "target": [
        "AppImage",
        "deb"
      ],
      "desktop": {
        "Name": "Ats Hindu Calendar",
        "Comment": "Hindu Panchang Calendar Desktop Widget",
        "Terminal": "false",
        "Type": "Application",
        "Categories": "Utility;Calendar;",
        "StartupWMClass": "ats-hindu-calendar"
      }
    },
    "appImage": {
      "artifactName": "Ats-Hindu-Calendar-${version}-${arch}.AppImage"
    },
    "deb": {
      "artifactName": "ats-hindu-calendar_${version}_${arch}.deb",
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1"
      ]
    }
  },
  "keywords": [
    "hindu",
    "calendar",
    "panchang",
    "widget",
    "desktop",
    "electron"
  ],
  "author": "Atish Ak Sharma <atishsharma@example.com>",
  "homepage": "https://atishaksharma.com/calendar/",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.2.1",
    "electron-builder": "^24.13.3"
  }
}